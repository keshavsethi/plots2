<header style="margin:0 auto; text-align:center; width:100%;">
  <img src="https://avatars2.githubusercontent.com/u/4621650?s=200&v=4">
  <p style="font-size:1em; color:blue;">[Public Lab] <%= @subject %></p>
  <p style="font-size:0.7em; color:blue;"><%= Time.now.strftime("%B %-d %Y") %></p>
  <p style="font-size:1em; font-family:sans-serif; margin-bottom:0; color:grey;">Unmoderated Notes at <a href="https://publiclab.org" style="color:green; text-decoration: none;">PublicLab.org</a></p>
  <hr style="height:1px; background-color:black; width:50%; background-color:green;">
</header>

<ul style="list-style-type:none; height:auto; font-family:sans-serif; margin:0 auto auto 0;">
    <% @nodes.each do |n| %>
        <li style="position:relative; height:auto; width:90vw;">
            <div style="padding:5% 0 0 5%;">
                <a style="text-decoration:none; font-weight:500; font-size:1.5em; color:blue;" href="<%= ActionMailer::Base.default_url_options[:host] + n.path %>">"<%= n.title %>"</a>
            </div> 
            <div style="padding-left:5%;">  
                <div style="float:left;">
                    <% if n.author.photo? %>
                        <img style="width:70px; height:70px; border-radius:50%;" src="https://<%= ActionMailer::Base.default_url_options[:host] %><%= n.author.photo_path(:thumb) %>"/>
                    <% else %>
                        <img style="width:70px; height:70px;border-radius:50%;" src="https://www.gravatar.com/avatar/1aedb8d9dc4751e229a335e371db8058"/>
                    <% end %>
                </div>
                <div style= "padding-left:10%">
                    <p style="font-weight:500; color:blue;"><%= n.author.username.capitalize %></p>
                    <p style="color: #999; font-weight:500;">created at <%= n.created_at.strftime("%B %-d %Y") %></p>
                </div>
            </div>
            <div style="padding-left:5%;">
                <p style="color:black; font-size:1.0em; line-height: 1.6;"><%= n.body.truncate(300) %></p>
            </div>
            <a style="color:green; text-decoration:none; padding-left:5%" href="https://<%= ActionMailer::Base.default_url_options[:host] %>/moderate/publish/<%= n.id %>">Approve</a>   <a style="color:red; text-decoration:none;"href="https://<%= ActionMailer::Base.default_url_options[:host] %>/moderate/spam/<%= n.id %>">Spam</a></div>
            <hr style="border:none; height:2px; background-color:green; width: 45%;margin-top:2%;">
        </li>
    <% end %>
</ul>
<div style="text-align:center; margin-top:5%;">
    <p style="color:blue; text-decoration:none;">Click <a style="color:green; text-decoration:none;"href="https://<%= ActionMailer::Base.default_url_options[:host] %>/subscriptions">here</a> to choose your followed topics</p>
    <p style="color:blue; text-decoration:none;">Click <a style="color:green; text-decoration:none;"  href="https://<%= ActionMailer::Base.default_url_options[:host] %>/settings">here</a> to change your subscription settings</p>
</div>